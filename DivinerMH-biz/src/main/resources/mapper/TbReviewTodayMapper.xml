<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.menghuan.blog.mapper.TbReviewTodayMapper">

    <!-- 通用查询结果集映射 -->
    <resultMap id="BaseResultMap" type="cn.menghuan.blog.entity.TbReviewToday">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="wakeUpTime" column="wake_up_time" jdbcType="TIMESTAMP"/>
        <result property="sackTime" column="sack_time" jdbcType="TIMESTAMP"/>
        <result property="learningTime" column="learning_time" jdbcType="VARCHAR"/>
        <result property="playingTime" column="playing_time" jdbcType="VARCHAR"/>
        <result property="sportTime" column="sport_time" jdbcType="VARCHAR"/>
        <result property="isHaveBreakfast" column="is_have_breakfast" jdbcType="VARCHAR"/>
        <result property="isListenNews" column="is_listen_news" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="delFlag" column="del_flag" jdbcType="VARCHAR"/>
    </resultMap>
    <!-- TbReviewTodayVO查询结果集映射 -->
    <resultMap id="TbReviewTodayVOResultMap" type="cn.menghuan.blog.vo.TbReviewTodayVO">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="wakeUpTime" column="wake_up_time" jdbcType="TIMESTAMP"/>
        <result property="sackTime" column="sack_time" jdbcType="TIMESTAMP"/>
        <result property="learningTime" column="learning_time" jdbcType="VARCHAR"/>
        <result property="playingTime" column="playing_time" jdbcType="VARCHAR"/>
        <result property="sportTime" column="sport_time" jdbcType="VARCHAR"/>
        <result property="isHaveBreakfast" column="is_have_breakfast" jdbcType="VARCHAR"/>
        <result property="isListenNews" column="is_listen_news" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="delFlag" column="del_flag" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 通用查询基本字段 -->
    <sql id="Base_Column_List">id, user_id, name, type, wake_up_time, sack_time, learning_time, playing_time, sport_time, is_have_breakfast, is_listen_news, description, status, create_time, update_time, del_flag</sql>


    <!-- 根据id查询每天内省详情(多服务) -->
    <select id="queryTbReviewTodayDetail" resultMap="TbReviewTodayVOResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM tb_review_today
        WHERE del_flag = 0 AND id = #{id}
        ORDER BY create_time DESC
    </select>

    <!-- 无参查询每天内省List -->
    <select id="queryTbReviewTodayList" resultMap="TbReviewTodayVOResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM tb_review_today
        WHERE del_flag = 0
        ORDER BY create_time DESC
    </select>

    <!-- 条件查询每天内省List -->
    <select id="queryByConditions" resultMap="TbReviewTodayVOResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM tb_review_today
        <where>
            del_flag = 0
            <if test="tbReviewTodayDTO.name != null and tbReviewTodayDTO.name != '' ">
                AND `name` LIKE CONCAT('%', #{tbReviewTodayDTO.name},'%')
            </if>
            <if test="tbReviewTodayDTO.status != null and tbReviewTodayDTO.status != '' ">
                AND status = #{tbReviewTodayDTO.status}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

</mapper>
